Bootstrap: docker
From: ubuntu:18.04
Stage: spython-base

%post
# modified from https://github.com/biobakery/biobakery/blob/master/docker/metaphlan/Dockerfile

# also install python version 2 used by bowtie2
apt-get update && \
DEBIAN_FRONTEND="noninteractive" apt-get install -y python python-dev python3 python3-dev python3-pip apt-transport-https openjdk-8-jre wget zip zlib1g-dev libbz2-dev liblzma-dev libjpeg-dev libncurses-dev
pip3 install boto3 cloudpickle awscli

PATH=/opt/conda/bin:$PATH

# install conda
wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-py37_4.10.3-Linux-x86_64.sh -O ~/miniconda.sh && \
/bin/bash ~/miniconda.sh -b -p /opt/conda && \
rm ~/miniconda.sh && \
ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh && \
echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc && \
echo "conda activate base" >> ~/.bashrc

# Make RUN commands use `bash --login` (instead of '/bin/sh -c'):
chsh -s /bin/bash
conda init bash

eval "$(conda shell.bash hook)"

conda activate base

conda config --add channels defaults
conda config --add channels bioconda
conda config --add channels conda-forge

conda install mamba
mamba install metaphlan=3.1
metaphlan --install

%environment
export PATH=/opt/conda/bin:$PATH
%runscript
exec /bin/bash "$@"
%startscript
exec /bin/bash "$@"
